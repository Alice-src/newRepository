<h2 class="h3"><a href="{{ article.url }}">{{ article.title }}</a></h2>
{% if section.settings.blog_show_date or section.settings.blog_show_author %}
  <div class="featured-blog__meta">
    {% if section.settings.blog_show_date %}
      <span class="featured-blog__date">
        <time datetime="{{ article.published_at | date: '%Y-%m-%dT%H:%M:%SZ' }}">{{ article.published_at | date: format: 'date' }}</time>
      </span>
    {% endif %}
  </div>
{% endif %}

{% if section.settings.blog_show_excerpt %}
      <div class="rte rte--indented-images">
        {{ article.excerpt_or_content | strip_html | truncatewords: 16 }}
      </div>
    <div class="featured-blog__meta">
        {% if section.settings.blog_show_author %}
            <p class="featured-blog__author">Published by {{ article.author }}</p>
        {% endif %}
    </div>
{% endif %}
